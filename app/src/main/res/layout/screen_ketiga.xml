<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/color_screen3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/appintroketiga"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA TERPERCAYA"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat Magang yang terdaftar adalah Data dari orang yang telah melaksanakan magang"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:textSize="15dp"
            />

    </LinearLayout>

</RelativeLayout>